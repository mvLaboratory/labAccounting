<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">
            org.h2.Driver
        </property>

        <property name="hibernate.connection.url">
            jdbc:h2:./base/labBase
        </property>

        <property name="hibernate.connection.username">
            sa
        </property>

        <property name="hibernate.connection.password">

        </property>

        <property name="dialect">
            org.hibernate.dialect.H2Dialect
        </property>

        <property name="hibernate.id.new_generator_mappings">false</property>

        <!-- List of XML mapping files -->
        <!--<mapping class="com.mvLab.account.lab.models.Employee"></mapping>
        <mapping class="com.mvLab.account.lab.models.Department"></mapping>-->
        <mapping class="com.mvLab.lab.account.catalogs.reagents.ReagentCatalog"></mapping>
        <mapping class="com.mvLab.lab.account.documents.reagentAdmission.ReagentAdmission"></mapping>
        <mapping class="com.mvLab.lab.account.documents.reagentAdmission.ReagentAdmissionTablePartRow"></mapping>
        <mapping class="com.mvLab.lab.account.register.ReagentBalance"></mapping>
    </session-factory>
</hibernate-configuration>